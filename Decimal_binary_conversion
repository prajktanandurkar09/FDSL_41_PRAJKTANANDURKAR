#include<stdio.h>
int main(){
int d,a[6],b,i,top=-1,rem;
printf("enter the no. in decimal form:");
scanf("%d",&d);

if(d==0){
printf("binary no is 0\n");
}
else{
while(d>0){
rem=d%2;
top++;
a[top]=rem;
d=d/2;
}
}

printf("the Binary number is:");
for(i=top;i>=0;i--){
printf("%d\t",a[i]);
}
return 0;
}





