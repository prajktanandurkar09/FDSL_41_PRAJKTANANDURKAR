#include<stdio.h>
#include<stdlib.h>
struct node{
   int data;
   struct node *next;
   };
struct node *temp,*newnode,*head;
void main(){
   int ch;
   head=NULL;
   do{
    newnode= malloc(sizeof(struct node));
    printf("enter the value for the newnode");
    scanf("%d",&newnode->data);
    newnode->next=NULL;
    if(head==NULL){
       head =newnode;
       temp=newnode;
    }
    else{
       temp->next=newnode;
       temp= newnode;
    }
printf("do you want to continue");
printf("\n1.yes\n2.no") ;
scanf("%d",&ch);

   }
   
while(ch==1);
temp=head;
while(temp!=NULL){
  printf("%d address id %p and Address of next node id %p\n",temp->data,temp,temp->next);
  temp=temp->next;
  }
  
  }
