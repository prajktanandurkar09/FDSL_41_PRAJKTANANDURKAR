#include <stdio.h>

// Defining structure for Student
struct Student {
    int roll_no;
    int age;
    float marks;
};

int main() {
    struct Student students[] = {
        {3, 18, 85.5},
        {1, 19, 90.0},
        {4, 17, 78.0},
        {2, 20, 88.5}
    };

    int n = sizeof(students) / sizeof(students[0]);
    int i, j;
    struct Student key;

    // Printing original array
    printf("Original list:\n");
    for (i = 0; i < n; i++) {
        printf("Roll No: %d, Age: %d, Marks: %.2f\n", students[i].roll_no, students[i].age, students[i].marks);
    }

    // Insertion Sort based on Roll Number
    for (i = 1; i < n; i++) {
        key = students[i];

        // Using only for loop for shifting
        for (j = i - 1; j >= 0; j--) {
            if (students[j].roll_no > key.roll_no) {
                students[j + 1] = students[j];
            } else {
                break;
            }
        }
        students[j + 1] = key; // Insert key at correct position
    }

    // Printing sorted array
    printf("\nSorted list (by Roll No):\n");
    for (i = 0; i < n; i++) {
        printf("Roll No: %d, Age: %d, Marks: %.2f\n", students[i].roll_no, students[i].age, students[i].marks);
    }

    return 0;
}
