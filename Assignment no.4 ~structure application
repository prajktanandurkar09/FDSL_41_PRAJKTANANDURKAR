#include <stdio.h>

// Defining structure for Student
struct Student {
    int roll_no;
    int age;
    float marks;
};

int main() {
    int n, i, j, choice;
    
    // Accept number of students
    printf("Enter the number of students: ");
    scanf("%d", &n);

    struct Student students[n], key;

    // Accept student details
    for (i = 0; i < n; i++) {
        printf("\nEnter details for student %d\n", i + 1);
        printf("Roll No: ");
        scanf("%d", &students[i].roll_no);
        printf("Age: ");
        scanf("%d", &students[i].age);
        printf("Marks: ");
        scanf("%f", &students[i].marks);
    }

    // Ask user for sorting choice
    printf("\nSort by:\n1. Roll No\n2. Age\n3. Marks\nEnter your choice: ");
    scanf("%d", &choice);

    // Sorting based on user choice
    switch (choice) {
        case 1: // Sort by Roll No
            for (i = 1; i < n; i++) {
                key = students[i];
                for (j = i - 1; j >= 0; j--) {
                    if (students[j].roll_no > key.roll_no) {
                        students[j + 1] = students[j];
                    } else {
                        break;
                    }
                }
                students[j + 1] = key;
            }
            printf("\nSorted by Roll No:\n");
            break;

        case 2: // Sort by Age
            for (i = 1; i < n; i++) {
                key = students[i];
                for (j = i - 1; j >= 0; j--) {
                    if (students[j].age > key.age) {
                        students[j + 1] = students[j];
                    } else {
                        break;
                    }
                }
                students[j + 1] = key;
            }
            printf("\nSorted by Age:\n");
            break;

        case 3: // Sort by Marks
            for (i = 1; i < n; i++) {
                key = students[i];
                for (j = i - 1; j >= 0; j--) {
                    if (students[j].marks > key.marks) {
                        students[j + 1] = students[j];
                    } else {
                        break;
                    }
                }
                students[j + 1] = key;
            }
            printf("\nSorted by Marks:\n");
            break;

        default:
            printf("\nInvalid choice! Sorting not performed.\n");
            return 1;
    }

    // Printing sorted students
    for (i = 0; i < n; i++) {
        printf("Roll No: %d, Age: %d, Marks: %.2f\n", students[i].roll_no, students[i].age, students[i].marks);
    }

    return 0;
}
